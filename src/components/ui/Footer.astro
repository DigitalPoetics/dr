---
import Social from "./Social.astro";
import { Image } from "astro:assets";
import githubIcon from "../../assets/images/favicon/github.svg";
---
<!-- <footer>
  <Social platform="twitter" username="astrodotbuild" />
  <Social platform="github" username="digitalpoetics" />  
</footer> -->

<footer>
  <div class="columns">
    <div class="column">
        <Social platform="github" username="digitalpoetics/dr">
        <Image 
          src={githubIcon}
          alt="Github logo"
          width={30}
          height={30}
        />
        <Social />
    </div>
    <div class="column">
        <p>&copy; {new Date().getFullYear()} All Rights Reserved</p>
        <p>Made with Astro</p>
    </div>
  </div>
</footer>

<style>
  /* footer {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    border-top: var(--border-color);
  } */

.columns {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 1rem 0 1rem 0;
  border-top: var(--border-color);
}

.column {
  flex: 1;
}

.column {
  text-align: center;
  margin-bottom: 0;
  color: var(--light-text);
}

html.dark .column {
  color: var(--dark-text);
}

@media screen and (min-width: 636px) {
  .columns {
    flex-direction: row;
    align-items: center;
  }
}

img:hover {
    background-color: var(--hover-color);
}

html.dark img {
    filter: invert(1);
}

html.dark img:hover {
    background-color: var(--hover-color);
}

</style>