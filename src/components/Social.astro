---
const {platform, username} = Astro.props;
---

<!-- <a href={`https://www.${platform}.com/${username}`}><i class="{`fab fa-${platform}`}"></i>{platform}</a> -->

<a href={`https://www.${platform}.com/${username}`} target="_blank">
  <img src={`/favicon/${platform}.svg`} width="30" height="30" />
</a>


<style>
a {
    padding = 0.5rem 1rem;
    color: var(--light-text);
    text-decoration: none;
}

img:hover {
    background-color: var(--hover-color);
}

html.dark img {
    filter: invert(1);
}

html.dark img:hover {
    background-color: var(--hover-color);
}

html.dark a {
    color: var(--dark-text);
}
html.light a {
    color: var(--light-text);
}
</style>