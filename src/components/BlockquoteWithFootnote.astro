---
// Props: text (string), cite (string), footnoteId (string)
import Superscript from "./Superscript.astro";
const { text, cite, id } = Astro.props;
---
<blockquote>
  {text}<br />
  <cite>~ {cite}</cite>
  <Superscript id={id} />
</blockquote>

<style>
  blockquote {
    /* font-style: italic; */
    margin: 2rem 0 2rem 2rem;
    padding-left: 1rem;
    border-left: var(--border-color);
  }

</style>
