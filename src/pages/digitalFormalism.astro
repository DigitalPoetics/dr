---
import BaseLayout from '../layouts/BaseLayout.astro';
import SelectedPosts from '../components/ui/SelectedPosts.astro';
import UiShowcase from '../components/ui/UiShowcase.astro';
const pageTitle = "Digital Formalism"
const description = "Audio visualization"
const index = 'digitalFormalism'
const {frontmatter } = Astro.props;
//src image
import poemaImage from "../assets/images/digitalFormalism/poema.png"
---

<BaseLayout pageTitle={pageTitle} description={description}>
    
    <UiShowcase 
        pageTitle="~Poema~"
        description="Poema implements Praat display on the browser, and it extends the Tones and Breaks Indices (ToBI) framework by including beats and text to analyze rhythm and enjambments of verse."
		imageUrl= {poemaImage}
        imageAlt="Audio visualization and annotation of The Red Wheelbarrow"
        srcPath="/poema2"
    />
    
    <SelectedPosts 
        frontmatter={frontmatter} 
        index={index} 
    />

</BaseLayout>