      searchData={deleuzeLectures}
      label="Deleuzian: "
      description="Search through Gilles Deleuze lectures by title, content, or author."
      placeholder="Search the Deleuze Seminars"
      searchTitle="Deleuze Lecture Search"
      searchKeys={[
        { name: "title", weight: 2 },
        { name: "text", weight: 1.5 },
        { name: "author", weight: 1 },
        { name: "number", weight: 0.5 }
      ]}
      linkPrefix=""
      authorField="author"
      titleField="title" 
      dateField="date"
      slugField="url"
    />
