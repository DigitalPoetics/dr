---
import Header from "../components/ui/Header.astro";
import Footer from "../components/ui/Footer.astro"
import Navigation from "../components/ui/Navigation.astro";
import "../styles/global.css";
// src image
import faviconSrc from "../assets/images/favicon/DR.png";

interface Props {
	pageTitle?: string;
	description?: string;
}
const { pageTitle, description } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href={faviconSrc.src} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<!-- sitemap -->
		<link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap-index.xml" />
		<!-- for preloading libraries and data files -->
		<link rel="preload" href="/fonts/im-fell-english-regular.woff2" as="font" type="font/woff2" crossorigin>
		<slot name="head" />
		<title>{pageTitle}</title>
		<!-- Rybbit tracking script -->
		 <script is:inline src="https://app.rybbit.io/api/script.js" data-site-id="18517072de74" defer></script>
	</head>
	<body>
		<Header />
		<Navigation />
		<div class="layout">
			<main id="content" data-pagefind-body>
				<h1 
				class="title-page" 
				data-pagefind-meta="title">{pageTitle}</h1>
				<slot />
			</main>
		</div>
		<Footer/>
		<script>
			import "../scripts/menu.js"
		</script>
	</body>
</html>

<style>
.layout {
    display: block;
    min-height: 80vh;
	padding: 3.2rem 1rem 0 1rem;
}

main {
	max-width: 90vw;
	margin: 0 auto;
}

/* .page-title {
  text-align: left;
  font-size: 2rem;
  font-weight: normal;
  max-width: 100%;
} */
.title-page {
	letter-spacing: var(--title-letter-spacing-small); 
	margin: 3rem 0 0 0;
	font-size: 2rem;
	text-transform: uppercase;
}

@media screen and (min-width: 636px) {
  .layout {
		display: flex;
    	min-height: 80vh;
		padding: 3.2rem 1rem 0 1rem;
  }

  main {
	/* max-width: 55vw; */
	max-width: 70vw;
	/* margin: 0 1rem 0 1rem; */
	/* margin: 0 auto; */
	margin: 1rem 15vw 0 15vw;
  }

  .title-page {
	letter-spacing: var(--title-letter-spacing); 
	font-size: 2.5rem;
  }

  /* .page-title {
    font-size: 3rem;
	font-weight: normal;
	max-width: 90%;
	line-height: 1.1;
  } */
}


