---
import BaseLayout from "./BaseLayout.astro";
import { Image } from "astro:assets";
// import SelectedPosts from "../components/SelectedPosts.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout description=`${frontmatter.description} + ${frontmatter.tags}`>
  <div class="post-header">
    <p class="post-title">{frontmatter.title}</p>
    
    <div class="post-meta">
      <Image src={frontmatter.image.url} alt={frontmatter.image.alt} />
      <div class="byline">
        <p>{new Date(frontmatter.pubDate).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</p>
      </div>
      
      <p class="description"><strong>A B</strong> â€” {frontmatter.description}</p>
      
      <div class="tags">
        {frontmatter.tags.map((tag: string) => (
          <p class="tag"><a href={`/tags/${tag}`}>~ {tag}</a></p>
        ))} 
      </div>
    </div>
  </div>
  
  <div class="post-content">
    <slot />
  </div>
</BaseLayout>

<style>

.post-title {
  text-align: center;
  font-size: 2rem;
  font-weight: normal;
  max-width: 100%;
  line-height: 1.1;
  margin-bottom: 1.5rem;
}

.post-header {
  text-align: center;
  margin-bottom: 1.5rem;
}


img {
  max-width: 100%;
  height: auto;
  margin-bottom: 1.5rem;
  border-radius: 0.5rem;
  border: var(--image-border);
}

.post-meta {
  margin-bottom: 2rem;
}

.byline p {
  margin: 0.5rem 0;
}

.description {
  margin: 1rem 0 1rem 0;
  font-size: 1.5rem;
  line-height: 1.1;
  font-weight: normal;
}

.description span {
  font-weight: bold;
}

.tags {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.tag {
    margin: 0 0.5rem;
}

.tag a {
  text-decoration: none;
  color: var(--light-text);
}

html.dark .tag a {
  text-decoration: none;
  color: var(--dark-text);
}

.post-content {
  text-align: left;
  max-width: 100%;
}


@media screen and (min-width: 636px) {
    .post-title {
        text-align: center;
        font-size: 4rem;
        font-weight: normal;
        max-width: 100%;
        line-height: 1.1;
        margin-bottom: 3rem;
    }

    .post-content {
        max-width: 90%;
        margin: 0 auto;
    }

    .post-header {
        margin-bottom: 2rem;
    }

    .description {
        font-size: 1.5rem;

    }
}
</style>
