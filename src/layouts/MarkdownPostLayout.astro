---
import BaseLayout from "./BaseLayout.astro";
import Figure from "../components/ui/Figure.astro";
import { Image } from "astro:assets";
// import SelectedPosts from "../components/SelectedPosts.astro";
import SelectedPosts from "../components/ui/SelectedPosts.astro";
import Dinkus from "../components/ui/Dinkus.astro";
import Note from "../components/ui/Note.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout description=`${frontmatter.description} + ${frontmatter.tags}`>
  <div class="post-header">
    <h1 class="title-page" data-pagefind-meta="title">{frontmatter.title}</h1>
    <Dinkus count={3}></Dinkus>
    <div class="post-meta">
      <Figure>
        <Image 
          slot="image" 
          src={frontmatter.image.url} 
          alt={frontmatter.image.alt} 
          class="responsive-image" 
        />
        <span slot="caption">Figure 1: {frontmatter.image.alt}</span>
      </Figure>
      <div data-pagefind-ignore="all">
        <div class="byline">
          <p data-pagefind-meta="date">{new Date(frontmatter.pubDate).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</p>
        </div>

        <div class="tags">
          {frontmatter.tags.map((tag: string) => (
            <a class="tag" href={`/posts/${tag}`} target="_blank">~ {tag}</a>
          ))} 
        </div>
        <Dinkus count={1}></Dinkus>

        <Note>
          <p class="description"><b data-pagefind-meta="author">A B</b>{frontmatter.description}</p>
        </Note>

        <div class="selected-posts">
          <SelectedPosts 
            frontmatter={frontmatter} 
            index={frontmatter.index} 
          />
        </div>
        <Dinkus count={1}></Dinkus>
      </div>
    </div>
  </div>

  <div class="post-content">
    <slot />
  </div>
</BaseLayout>
